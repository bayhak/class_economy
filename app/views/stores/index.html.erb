<h1>Listing stores</h1>

<table class="table">
  <tr>
    <th>Group</th>
    <th>Name</th>
    <th>Description</th>
    <th>Approved</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @group.stores.each do |store| %>
  <tr>
    <td><%= store.group.name %></td>
    <td><%= store.name %></td>
    <td><%= store.description %></td>
    <td><%= store.approved %></td>
    <td><%= link_to 'Show', @group_store %></td>
    <td><%= link_to 'Edit', edit_group_store_path(@group, store) %></td>
    <td><%= link_to 'Destroy', [@group, store], method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Store', new_group_store_path(@group) %>
